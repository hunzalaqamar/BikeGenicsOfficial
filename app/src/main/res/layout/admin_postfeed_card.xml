<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.208">


    <ImageView
        android:id="@+id/postfeed_image_user_show"
        android:layout_width="90sp"
        android:layout_height="87dp"
        android:background="@drawable/circle_image"
        android:src="@drawable/ic_upload" />

    <TextView
        android:id="@+id/postfeed_fullname_txt"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="User full name"
        android:textAlignment="center"></TextView>

    <TextView
        android:id="@+id/postfeed_date_time_txt"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Date and Time"
        android:textAlignment="center">

    </TextView>

    <EditText
        android:id="@+id/user_postfeed_postdesc"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_gravity="center"

        android:background="@color/txtColor"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:hint="Post Description"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:textDirection="firstStrongRtl"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <ImageView
        android:id="@+id/user_postfeed_postImage"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:src="@drawable/ic_upload" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208">

        <Button
            android:id="@+id/postfeed_contact_btn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/btnbg"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="@string/contact"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.219"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.948" />

        <Button
            android:id="@+id/postfeed_delete_btn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="20sp"
            android:background="@color/cancel"
            android:fontFamily="@font/poppins_light"
            android:text="@string/delete"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.738"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.948" />
    </LinearLayout>
</LinearLayout>
    